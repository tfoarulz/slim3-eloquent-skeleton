{% extends 'layout.twig' %}

{% set title = 'Login '  %}
{% block title %}{{ title }}{% endblock %}

{% block content %}
<h3>{{ title }}</h3>

{% if flash %}<div class="alert alert-danger">{{ flash }}</div>{% endif %}

<form class="form-horizontal" action="login" method="post" autocomplete="off">
    <div class="form-group{% if errors.first('identifier') %} has-error{% endif %}">
        <label for="identifier" class="col-xs-2 control-label">Username/Email</label>
        <div class="col-xs-10">
            <input class="form-control" type="text" name="identifier" id="identifier" placeholder="Username / Email">
            {% if errors.first('identifier') %}<span class="label label-danger">{{ errors.first('identifier')}}</span>{% endif %}
        </div>
    </div>

    <div class="form-group{% if errors.first('password') %} has-error{% endif %}">
        <label for="password" class="col-xs-2 control-label">Password</label>
        <div class="col-xs-10">
            <input class="form-control" type="password" name="password" id="password" placeholder="Password">
            {% if errors.first('password') %}<span class="label label-danger">{{ errors.first('password')}}</span>{% endif %}
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            <button type="submit" class="btn btn-default">Login</button>
            <input type="hidden" name="csrf_name" value="{{ csrf.name }}">
            <input type="hidden" name="csrf_value" value="{{ csrf.value }}">
        </div>
    </div>
</form>

{% endblock %}
